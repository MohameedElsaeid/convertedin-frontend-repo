{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@converted-pay/shared/*": ["apps/converted-pay/src/app/shared/*"],
      "@converted-pay/store/*": ["apps/converted-pay/src/app/store/*"],
      "@convertedin/api": ["libs/api/src/index.ts"],
      "@convertedin/feature": ["libs/feature/src/index.ts"],
      "@convertedin/ui": ["libs/ui/src/index.ts"],
      "@convertedin/utilities": ["libs/utilities/src/index.ts"],
      "@convertedin3/shared/*": ["apps/convertedin3/src/app/shared/*"],
      "@flyerz/shared/*": ["apps/flyerz/src/app/shared/*"],
      "@flyerz/store/*": ["apps/flyerz/src/app/store/*"],
      "@pinads/shared/*": ["apps/pinads/src/app/shared/*"],
      "@pinads/store/*": ["apps/pinads/src/app/store/*"],
      "@redmose/shared/*": ["apps/redmose/src/app/shared/*"],
      "@redmose/store/*": ["apps/redmose/src/app/store/*"],
      "@super-admin/shared/*": ["apps/super-admin/src/app/shared/*"],
      "@super-admin/store/*": ["apps/super-admin/src/app/store/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
